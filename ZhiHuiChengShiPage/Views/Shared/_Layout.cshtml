    <script type="text/javascript">
        $(function () {
            //$("#banner_carousel").carousel('cycle');
            $("#btn_slide").click(function () {
                $("#collapse_left").animate({
                    width: 'toggle'
                })
            })
            $(window).scroll(function () {
                var nav = $(".navbar-static-top");
                if (nav.offset().top > 450) {
                    nav.addClass("bg-black");
                }
                else {
                    nav.removeClass("bg-black");
                }
            })
            $("#mobile-nav-trigger").click(function () {
                var mobileMenu=$("#mobile-nav");
                if (mobileMenu.hasClass('hide-nav')) {
                    setTimeout(function () {
                        mobileMenu.removeClass('hide-nav').addClass('show-nav');
                    }, 100);
                }
                else {
                    setTimeout(function () {
                        mobileMenu.removeClass('show-nav').addClass('hide-nav');
                    }, 100);
                }
            })
        })
    </script>
